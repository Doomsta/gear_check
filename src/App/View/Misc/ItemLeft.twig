<table>
    <tr>
        <td style="text-align:center;vertical-align:middle;">
            {% if item %}
                <a href="http://wotlk.openwow.com/item={{ item.id  }}" target="_blank">
                    <img src="https://www.linuxlounge.net/~martin/wowimages/?item={{ item.id }}"
                         class="item q{{ item.getRarity }}"/>
                </a>
            {% else %}
                <img class="item q1" src="/img/slots/{{ slot }}.png"/>
            {% endif %}

        </td>
        {% if item %}
        <td>
            <div>
                <div class="item-name">
                    {% if item.name %}
                    <span class="q{{ item.getRarity }}">
                        <a class="q{{ item.getRarity }}" href="#" rel="tooltip" data-placement='right' data-html='true' data-original-title="{{ app.tool.getItemTooltip(item) }}">
                            {{ item.name }}
                        </a>
                    </span>
                    {% endif %}
                </div>
            </div>

            <div class="item-under-name">

                {% if item.level %}
                    <span class="ilvl">{{ item.level }}</span>&nbsp;
                {% endif %}
                {% if item.isHero %}
                    <span class="hc-label">HC</span>&nbsp;
                {% endif %}
                {% for gem in item.getGemCollection.getGems %}
                    <div class="socket socket{$gem['socketColor']}">{% if gem.id %}<a href="http://wotlk.openwow.com/item={{ gem.id }}" rel="item={{ gem.id }}"><img class="gem" src="https://www.linuxlounge.net/~martin/wowimages/?item={{ gem.id }}" /></a>{% else %}<img class="gem" src="img/sockets/{{ gem.socketColor }}.gif" />{% endif %}</div>
                {% endfor %}
            </div>
        </td>
        {% endif %}
    </tr>
</table>